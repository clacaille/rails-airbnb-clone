</div>
  <div class="best-camps text-center">
  <div class="container">
  <div class="h1"> Newest SurfCamps</div>
  <br>
  <br>
  <div class="row">
    <% @camps.each do |camp| %>
    <div class="col-xs-12 col-sm-4">
      <%= link_to camp_path(camp) do %>
      <% photo = camp.photo %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)), url('<%= photo %>');">
        <div class="card-category">Popular</div>
        <div class="card-description">
          <h2><%= camp.title %></h2>
        </div>
      </div>
    <% end %>
    </div>
    <% end %>
  </div>
