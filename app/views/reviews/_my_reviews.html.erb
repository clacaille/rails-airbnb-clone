<% @user.reviews.each do |review| %>
  <div class="box-review">
    <div class="review-title"> <%= review.title %></div>
    <div class="review-description"> <%= review.description %></div>
    <p><%= review.rating %></p>
    <div class= "edit-reviews-pencil">
      <%= link_to edit_review_path(review) do %>
        <i class="fa fa-pencil" aria-hidden="true"></i>
      <% end %>
    </div>
    <div class= "delete-reviews-pencil">
      <%= link_to review_path(review), method: :delete, data: {confirm: "Are you sure you want to delete this review?"} do %>
        <i class="fa fa-trash" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>
<% end %>
