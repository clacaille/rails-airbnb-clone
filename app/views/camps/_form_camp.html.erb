<%= simple_form_for(@camp) do |f| %>
  <%= f.input :title, placeholder: "Amazing surf class", label: false, :class => "form-field" %>
  <%= f.input :description, placeholder: "7 days to become a surf master. Learn to surf with John John Florence, triple wold-champion!", label: false, :class => "form-field" %>
  <%= f.input :price, placeholder: "1000$", label: false, :class => "form-field" %>
  <%= f.input :address, placeholder: "76 California st, 03114 Malibu", label: false, :class => "form-field" %>
  <%= f.input :photo, label: "Add a picture"  %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>

<%= content_for(:after_js) do %>
  <script src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyC2zSE6-EimDEK0MPllX3I8c8g5lNQckWI"></script>
<% end %>
