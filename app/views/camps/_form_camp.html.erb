<%= simple_form_for(@camp) do |f| %>
  <%= f.input :title, placeholder: "Amazing surf class", :class => "form-field" %>
  <%= f.input :description, placeholder: "7 days to become a surf master. Learn to surf with John John Florence, triple wold-champion!", :class => "form-field" %>
  <%= f.input :price, placeholder: "1000$", :class => "form-field" %>
  <%= f.input :address, placeholder: "76 California st, 03114 Malibu", :class => "form-field" %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>

<%= content_for(:after_js) do %>
  <script src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyC2zSE6-EimDEK0MPllX3I8c8g5lNQckWI"></script>
<% end %>
